[user]
	name = Glaaj
	email = glenneggen@outlook.com
	signingkey = /home/glenn/.ssh/id_ed25519.pub
[gpg]
	format = ssh
[commit]
	gpgsign = true
	template = /home/glenn/.stCommitMsg

[alias]
  graph = log --all --graph --decorate --oneline
  lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n'' %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all

[branch]
	sort = -committerdate
[column]
	ui = auto
[commit]
  verbose = true
[core]
  excludesfile = ~/.gitignore
[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
[fetch]
  prune = true
  pruneTags = true
  all = true
[help]
  autocorrect = prompt
[init]
  defaultBranch = main
[maintenance]
  auto = true
  strategy = incremental
[pull]
  rebase = true
[push]
  default = simple
  autoSetupRemote = true
  followTags = true
[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true
[rerere]
  enabled = true
  autoupdate = true
[tag]
  sort = version:refname
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
